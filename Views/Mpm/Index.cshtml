@model PagedList.IPagedList<Models.Mpm>
@using PagedList.Mvc;
@{
    ViewBag.Title = "MPM";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>List of Mining Decision Makings</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/Mpm">Mpm</a>
            </li>
            <li class="active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-9">
                            <!-- end: Seaech Panel -->
                            @using (Html.BeginForm("Index", "Mpm", FormMethod.Get, htmlAttributes: new { @class = "form form-horizontal" }))
                            {
                                <div class="input-group">
                                    <input input class="input-sm form-control"
                                           data-content="Search in all of MPM cases"
                                           data-placement="bottom" data-toggle="popover"
                                           id="SearchString" name="SearchString" target="_self"
                                           type="text" placeholder="Search"
                                           value="@ViewBag.CurrentFilter" />
                                    @*<input type="text" placeholder="Search" class="input-sm form-control" name="SearchString" id="SearchString" value="@ViewBag.CurrentFilter"
                                        data_content="Search in all of decision makings" data_toggle="popover" data_placement="bottom" target="_self">*@
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
                                </div>
                            }
                            <!-- end: Seaech Panel -->
                        </div>
                        @Html.ActionLink("Create Mineral Prospectivity Mapping", "Create", null, new { @class = "btn btn-primary btn-sm " })
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped  table-hover ">
                            <thead>
                                <tr>

                                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Type)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Location)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Type)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>
                                        <td>
                                            
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm", @target = "_self" })
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-sm", @target = "_self" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-info btn-sm", @target = "_self" })
                                            @Html.ActionLink("Factor Groups", "Index", "FactorGroup", new { parentId = item.Id }, new { @class = "btn btn-danger btn-sm", @target = "_self" })
                                            @Html.ActionLink("Criteria", "Index", "CriteriumItem", new { parentId = item.Id }, new { @class = "btn btn-danger btn-sm", @target = "_self" })
                                            @Html.ActionLink("Make Decision", "RunFtHybrid", "DecisionMaking", new { id = item.Id }, new { @class = "btn btn-warning btn-sm", @target = "_self" })
                                            @Html.ActionLink("Results", "MpmDetails", "Result", new { parentId = item.Id }, new { @class = "btn btn-danger btn-sm", @target = "_self" })
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <br />
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model
                    , page => Url.Action("Index",
                     new { page }))
                </div>
            </div>
        </div>
    </div>
</div>  
@section scripts{
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="popover"]').popover();
        })
    </script>
}
