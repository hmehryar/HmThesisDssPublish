@model Models.DependencyItem
<div class="modal-header">
    <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
    <h4 class="modal-title">Are you sure to delete this dependency item from Cluster</h4>
</div>
<div class="modal-body">
    <p id="MessageToClient" class="text-danger"></p>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Start Cluster Name")
            @Html.DisplayNameFor(model => model.StartFactorGroup.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartFactorGroup.Name)
        </dd>
        <dt>

            @Html.DisplayName("End Cluster Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndFactorGroup.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Matrix)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Matrix)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "dependencyItemChoice" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-footer">
        <a class="btn btn-default" data-dissmiss="modal">Cancel</a>
        <input class="btn btn-danger" type="submit" value="Delete" />
    </div>
}
