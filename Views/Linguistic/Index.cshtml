


@{
    ViewBag.Title = "Linguistic Variable";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>List of Triangular Linguistic Variables</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/Linguistic">Mpm</a>
            </li>
            <li class="active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped  table-hover ">
                            <thead>
                                <tr>

                                    <th>@Html.DisplayName("Term")</th>
                                    <th>@Html.DisplayName("Variable")</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Models.FuzzyNumbers.LinguisticMapper.TriangularLinguisticVariable)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Key)
                                        </td>
                                        <td>
                                            @*@Html.DisplayFor((modelItem => item.Value).ToString())*@
                                            @item.Value.ToString()
                                        </td>
                                        <td>

                                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm", @target = "_self" })
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-sm", @target = "_self" })
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-info btn-sm", @target = "_self" })
                                                @Html.ActionLink("Factor Groups", "Index", "FactorGroup", new { parentId = item.Id }, new { @class = "btn btn-danger btn-sm", @target = "_self" })
                                                @Html.ActionLink("Criteria", "Index", "CriteriumItem", new { parentId = item.Id }, new { @class = "btn btn-danger btn-sm", @target = "_self" })
                                                @Html.ActionLink("Results", "MpmDetails", "Result", new { parentId = item.Id }, new { @class = "btn btn-danger btn-sm", @target = "_self" })*@
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
